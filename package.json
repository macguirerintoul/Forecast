{
  "name": "Forecast",
  "version": "1.0.5",
  "description": "A desktop app to keep track of upcoming tasks.",
  "author": "Macguire Rintoul (https://macguire.me)",
  "scripts": {
    "serve": "vue-cli-service electron:serve",
    "build": "vue-cli-service electron:build",
    "fix": "npm run lint:js -- --fix && npm run lint:css -- fix",
    "lint:css": "stylelint '**/*.{css,scss,vue}'",
    "lint:js": "eslint --ext .js,.vue .",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "test": "npm run build"
  },
  "main": "background.js",
  "dependencies": {
    "compare-versions": "^3.5.0",
    "moment": "^2.24.0",
    "nedb": "^1.8.0",
    "vue": "^2.5.22",
    "vue-notification": "^1.3.16",
    "vue-swipe-actions": "2.0.0-beta.12"
  },
  "devDependencies": {
    "@vue/cli-service": "^4.3.1",
    "babel-eslint": "10.1.0",
    "electron": "8.0.0",
    "eslint": "7.0.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-vue": "6.2.2",
    "node-sass": "4.14.1",
    "prettier": "2.0.5",
    "sass-loader": "8.0.2",
    "stylelint": "13.5.0",
    "stylelint-a11y": "1.2.3",
    "stylelint-config-sass-guidelines": "7.0.0",
    "stylelint-config-standard": "20.0.0",
    "stylelint-order": "4.0.0",
    "stylelint-scss": "3.17.2",
    "vue-cli-plugin-electron-builder": "~1.4.6",
    "vue-template-compiler": "2.6.11"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrintoul/Forecast.git"
  }
